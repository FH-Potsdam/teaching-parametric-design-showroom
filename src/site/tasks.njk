---
pagination:
    data: tasks
    size: 1
    alias: task
permalink: "tasks/{{ task.id | slug }}/"
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      body, html {margin:0; padding:0; border: none;}
      ul, li {
        list-style:none;
        margin:0;
        padding:0;
      }
      ul {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        box-sizing: border-box;
        padding: 20px;
      }
      iframe {
        width: 400px;
        height: 400px;
        border: 3px solid black;
        margin: 20px;
        background-color:black;
      }
    </style>
  </head>
  <body>
    <h1>{{task.title}}</h1>
    <ul>
    {%- for script in task.scripts %}
      <li>
        <iframe frameBorder="0" src="/sketches/{{script.id}}/index.html"></iframe>
        <a href="{{script.url}}">{{script.username}}</a>
      </li>
    {%- endfor %}
    </ul>
  </body>
</html>